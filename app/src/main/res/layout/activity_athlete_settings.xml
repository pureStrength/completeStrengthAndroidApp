<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.completeconceptstrength.activity.AthleteSettings">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/athleteFirstName"
        android:textColor="#000040"
        android:enabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:background="#00000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/athleteLastName"
        android:textColor="#000040"
        android:enabled="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/athleteFirstName"
        android:layout_alignParentTop="true"
        android:background="#00000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/athleteEmail"
        android:textColor="#000040"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/athleteFirstName"
        android:enabled="false"
        android:background="#00000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/changePassword"
        android:text="Change Password"
        android:onClick="changePassword"
        android:textColor="#1aa0a1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/athleteEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/organization"
        android:text="Organization: "
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/changePassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/athleteOrg"
        android:textColor="#000040"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:layout_below="@+id/changePassword"
        android:layout_toRightOf="@+id/organization"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/heightText"
        android:text="Height: "
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/organization"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/athleteHeight"
        android:textColor="#000040"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:layout_below="@+id/organization"
        android:layout_toRightOf="@+id/heightText"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/weightText"
        android:text="Weight: "
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/athleteHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/athleteWeight"
        android:textColor="#000040"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:layout_below="@+id/athleteHeight"
        android:layout_toRightOf="@+id/weightText"
        android:background="#00000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/dateOfBirth"
        android:text="Date of Birth: "
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/weightText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/athleteDOB"
        android:textColor="#000040"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:layout_below="@+id/weightText"
        android:layout_toRightOf="@+id/dateOfBirth"
        android:background="#00000000"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/athleteDOB"
        android:id="@+id/athleteRadioGroup"
        android:layout_alignParentTop="false"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metric"
            android:textSize="15dp"
            android:id="@+id/radioButtonMetric"
            android:checked="true"
            android:layout_below="@+id/athleteDOB"
            android:layout_gravity="left" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imperial"
            android:textSize="15dp"
            android:id="@+id/radioButtonImperial"
            android:checked="false"
            android:layout_below="@+id/athleteDOB"
            android:layout_toRightOf="@+id/radioButtonMetric"
            android:enabled="true"
            android:layout_gravity="left" />

    </RadioGroup>

    <TableLayout
        android:id="@+id/ORMTable"
        android:layout_below="@+id/athleteRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Edit"
        android:enabled="true"
        android:onClick="editProfile"
        android:id="@+id/buttonEdit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:enabled="false"
        android:onClick="saveProfile"
        android:layout_toRightOf="@+id/buttonEdit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.completeconceptstrength.activity.CoachSettings">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/coachFirstName"
        android:textColor="#000040"
        android:background="#00000000"
        android:enabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/coachLastName"
        android:textColor="#000040"
        android:background="#00000000"
        android:enabled="false"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/coachFirstName"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/organization"
        android:text="Organization: "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/coachFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/coachOrg"
        android:layout_marginTop="10dp"
        android:textColor="#000040"
        android:background="#00000000"
        android:enabled="false"
        android:layout_below="@+id/coachLastName"
        android:layout_toRightOf="@+id/organization"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/emailText"
        android:text="Email: "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/organization"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/coachEmail"
        android:layout_marginTop="10dp"
        android:textColor="#000040"
        android:background="#00000000"
        android:layout_below="@+id/organization"
        android:layout_toRightOf="@+id/emailText"
        android:enabled="false" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailText"
        android:id="@+id/radioGroupUserType"
        android:layout_alignParentTop="false"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metric"
            android:textSize="15dp"
            android:id="@+id/radioButtonMetric"
            android:checked="true"
            android:layout_below="@+id/emailText"
            android:layout_gravity="left" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imperial"
            android:textSize="15dp"
            android:id="@+id/radioButtonImperial"
            android:checked="false"
            android:layout_below="@+id/emailText"
            android:layout_toRightOf="@+id/radioButtonMetric"
            android:enabled="true"
            android:layout_gravity="left" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Edit"
        android:enabled="true"
        android:onClick="editProfile"
        android:id="@+id/buttonEdit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:enabled="false"
        android:onClick="saveProfile"
        android:layout_toRightOf="@+id/buttonEdit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

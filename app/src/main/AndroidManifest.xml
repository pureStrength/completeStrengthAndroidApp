<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.completeconceptstrength">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission android:name="com.completeconceptstrength.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.completeconceptstrength.permission.C2D_MESSAGE" />

    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".application.GlobalContext"
        android:allowBackup="true"
        android:icon="@drawable/ccs_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.completeconceptstrength" />
            </intent-filter>
        </receiver>
        <service
            android:name="com.completeconceptstrength.application.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name="com.completeconceptstrength.application.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegistrationActivity"
            android:label="@string/title_activity_registration"></activity>
        <activity
            android:name=".activity.CoachHomeActivity"
            android:label="@string/title_activity_coach_home"
            android:parentActivityName=".activity.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LoginActivity" />
        </activity>
        <activity
            android:name=".activity.AthleteHomeActivity"
            android:label="@string/title_activity_athlete_home"
            android:parentActivityName=".activity.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LoginActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activity.CoachSettings"
            android:label="@string/title_activity_coach_settings"></activity>
        <activity
            android:name=".activity.AthleteSettings"
            android:label="@string/title_activity_athlete_settings"></activity>
        <activity
            android:name=".activity.AthleteWorkouts"
            android:label="@string/title_activity_athlete_workouts"></activity>
        <activity
            android:name=".activity.CoachAthletesActivity"
            android:label="@string/title_activity_coach_athletes"></activity>
        <activity
            android:name=".activity.CoachWorkouts"
            android:label="@string/title_activity_coach_workouts"></activity>
        <activity
            android:name=".activity.ConnectionsButtons"
            android:label="@string/title_activity_connections_buttons"></activity>
        <activity
            android:name=".activity.ConnectionsList"
            android:label="@string/title_activity_connections_list"
            android:parentActivityName=".activity.ConnectionsButtons"></activity>
        <activity
            android:name=".activity.ConnectionSearch"
            android:label="@string/title_activity_connection_search"
            android:parentActivityName=".activity.ConnectionsButtons"></activity>
        <activity
            android:name=".activity.AthleteWorkoutList"
            android:label="@string/title_activity_athlete_workout_list">
            <intent-filter>
                <action android:name="AthleteWorkoutList" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AthleteWorkoutCalendar"
            android:label="@string/title_activity_athlete_workout_calendar"></activity>
        <activity
            android:name=".activity.CoachWorkoutsLifts"
            android:label="@string/title_activity_coach_workouts_lifts"></activity>
        <activity
            android:name=".activity.CoachWorkoutsSets"
            android:label="@string/title_activity_coach_workouts_sets"></activity>
        <activity
            android:name=".activity.CoachWorkoutsPrescriptions"
            android:label="@string/title_activity_coach_workouts_prescriptions"></activity>
        <activity android:name=".activity.CustomPrescriptionActivity"></activity>
        <activity android:name=".activity.CustomLiftActivity"></activity>
        <activity android:name=".activity.CustomSetsActivity"></activity>
        <activity
            android:name=".activity.AthleteWorkoutResults"
            android:label="@string/title_activity_athlete_workout_results"></activity>
        <activity android:name=".activity.ViewProfileActivity"></activity>
    </application>

</manifest>
